<form id="frm_newTask" action="/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <h4>Новая задача</h4>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="fld_user_name">Имя пользователя:</label>
                <input type="text" class="form-control" id="fld_user_name" name="user_name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="fld_user_email">Электронная почта:</label>
                <input type="email" class="form-control" id="fld_user_email" name="user_email">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="fld_image">Изображение:</label>
        <input type="file" accept=".jpg,.png,.gif" class="form-control" id="fld_image" name="image">
    </div>
    <div class="form-group">
        <label for="fld_description">Описание:</label>
        <textarea type="file" class="form-control" id="fld_description" name="description"></textarea>
    </div>


    <button class="btn btn-primary" id="btn_preview">Предварительный просмотр</button>
    <button class="btn btn-success" id="btn_save">Сохранить</button>
</form>

<div class="modal" id="preview_modal" role="dialog">
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Предварительный просмотр</h5>
                    <button type="button" class="close js-cancel-view" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn_modal-save">Сохранить</button>
                    <button type="button" class="btn btn-secondary js-cancel-view" data-dismiss="modal" aria-label="Close">Отмена</button>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="/assets/previewer.js">
</script>